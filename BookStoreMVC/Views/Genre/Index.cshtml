@model GenreListDto
@{
    ViewData["Title"] = "Index";
}

<h1>Genres</h1>

<div class="container">
    <div class="row">
        <div class="col-8 mx-auto">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>