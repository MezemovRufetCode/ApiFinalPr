@model GenreListDto
@{
    ViewData["Title"] = "Index";
}

<h1>Genres</h1>
<div style="display:flex;justify-content:flex-end">
    <a asp-controller="genre" asp-action="creategenre" class="btn btn-success" style="margin:20px 10px">Create</a>
</div>
<div class="container">
    <div class="row">
        <div class="col-8 mx-auto">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-controller="genre" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                <a asp-controller="genre" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


