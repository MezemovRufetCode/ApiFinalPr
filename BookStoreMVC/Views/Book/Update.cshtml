@model BookListItemDto
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <h2 class="mt-3">Update Book</h2>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Book Name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Price" class="form-label">Book Price</label>
            <input asp-for="@Model.Price" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Price"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Cost" class="form-label">Book Cost</label>
            <input asp-for="@Model.Cost" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Cost"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.IsDeleted" class="form-label">Book IsDeleted</label>
            <input asp-for="@Model.IsDeleted" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.IsDeleted"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.DisplayStatus" class="form-label">Book display status</label>
            <input asp-for="@Model.DisplayStatus" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.DisplayStatus"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.AuthorId" class="form-label">Author Id</label>
            <input asp-for="@Model.AuthorId" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.AuthorId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.GenreId" class="form-label">Genre Id</label>
            <input asp-for="@Model.GenreId" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.GenreId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Book Image</label>
            <input asp-for="@Model.ImageFile" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>